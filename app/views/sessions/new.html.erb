<% provide(:title, "Log in") %>

<div id="loginpng"><%= image_tag('login.png',height: '270px') %></div>
<div class="account">

    <%= form_for(:session, url: login_path) do |f| %>
<div class="acc-input">
      <%= f.label "Електронна пошта" %>
      <%= f.email_field :email, class: 'form-control' %>
</div><div class="acc-input">
      <%= f.label "Пароль" %>

      <%= f.password_field :password, class: 'form-control' %>
  <%= link_to "(Забули пароль?)", new_password_reset_path %>
</div>
    <div class="acc-input">
      <%= f.label :remember_me, class: "checkbox inline",id: 'checkbox' do %>
        <%= f.check_box :remember_me %>
        <span>Запам'ятати мене</span>
      <% end %>

      <%= f.submit "Ввійти",id:"logbtn" , class: "btn btn-primary" %>
    <% end %>
  <p>Новий користувач?<%= link_to "Створіть аккаунт!", signup_path %></p>

  </div>
</div>