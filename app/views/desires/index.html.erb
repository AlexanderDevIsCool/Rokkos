<h1>Корзина</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @desires.each do |desire| %>
      product name: <%= Product.find_by(id: desire.product_id).name%><br/>
      product price: <%= Product.find_by(id: desire.product_id).sale_price%>
      <tr>
        <td><%= link_to 'Show', (product_path(desire.product_id))%></td>
        <td><%= link_to 'Destroy', desire, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%= link_to "BUY", new_order_path(order:{
            product_id: desire.product_id, user_id: current_user.id, quantity: desire.desires_quantity}) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>