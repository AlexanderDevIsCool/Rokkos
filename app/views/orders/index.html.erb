<p id="notice"><%= notice %></p>

<h1>Замовлення</h1>
  <%unless @orders.empty? %>

  <table>
    <thead>
    <tr>
      <th>ПІБ</th>
      <th>Місто</th>
      <th>Телефон</th>
      <th>Електронна пошта</th>
      <th>Адреса</th>
      <th>Доставка</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.full_name %></td>
        <td><%= order.city %></td>
        <td><%= order.mobile %></td>
        <td><%= order.email %></td>
        <td><%= order.order_address %></td>
        <td><%= order.order_type %></td>
        <td><%= link_to 'Показати', order %></td>
        <% if logged_in_and_admin? %>
          <td><%= link_to 'Редагувати', edit_order_path(order) %></td>
          <td><%= link_to 'Видалити', order, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
        <% end %>
      </tr>
    <% end %>

    </tbody>
  </table>

  <% end %>

