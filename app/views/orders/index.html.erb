<p id="notice"><%= notice %></p>

<h1>Orders</h1>
  <%if @orders %>

  <table>
    <thead>
    <tr>
      <th>Fullname</th>
      <th>City</th>
      <th>Mobile</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.full_name %></td>
        <td><%= order.city %></td>
        <td><%= order.mobile %></td>
        <td><%= order.email %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    </tbody>
  </table>

  <% end %>


<br>

